@model HealthApp.Common.Model.Record
@inject HealthApp.API.Data.ApplicationDbContext _context

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Record</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publication" class="control-label"></label>
                <input asp-for="Publication" class="form-control" />
                <span asp-validation-for="Publication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TextXAML" class="control-label"></label>
                <textarea asp-for="TextXAML" class="form-control" rows="3"></textarea>
                <span asp-validation-for="TextXAML" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Category</label>
                @Html.DropDownListFor(x => x.Category, new SelectList(_context.Categories.ToList(), "Id", "Name"), htmlAttributes: new { @class = "form-control", name = "Category" })
            </div>
            <div class="form-group">
                <label class="control-label">Record Image</label>
                <input type="file" name="RecordImage" class="form-control-file" accept="image/*" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsNews" /> @Html.DisplayNameFor(model => model.IsNews)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsHot" /> @Html.DisplayNameFor(model => model.IsHot)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsPopular" /> @Html.DisplayNameFor(model => model.IsArticle)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsArticle" /> @Html.DisplayNameFor(model => model.IsArticle)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsYoutube" /> @Html.DisplayNameFor(model => model.IsYoutube)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
