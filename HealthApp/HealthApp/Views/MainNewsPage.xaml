<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:cards="clr-namespace:PanCardView;assembly=PanCardView" 
             xmlns:local="clr-namespace:HealthApp.Views.Components.PopularNewsComponents"
             x:Class="HealthApp.Views.MainNewsPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Shell.TitleView>
        <Grid BackgroundColor="{DynamicResource PageBackgroundColor}"
              ColumnDefinitions="*,10"
              HorizontalOptions="FillAndExpand"
              VerticalOptions="FillAndExpand">
            <Label FontAttributes="Bold"
                   FontSize="{StaticResource HeadLabelFontSize}"
                   HorizontalOptions="Center"
                   Text="Новости"
                   VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="PopularNewsView">
                <local:PopularNewsViewCell/>
            </DataTemplate>
            <local:PopularNewsComponentsDataTemplateSelector x:Key="NewsComponentsDataTemplateSelector"
                                                             PopularNewsView="{StaticResource PopularNewsView}"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid RowDefinitions="200">
            <ScrollView x:Name="carouselPopularNewsView"
                        Grid.Row="0"
                        BackgroundColor="{DynamicResource PageBackgroundColor}"
                        Orientation="Horizontal">
                <FlexLayout BindableLayout.ItemsSource="{Binding TabPopularRecords}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <ContentView>
                                <Grid Padding="10,0"
                                      BackgroundColor="{DynamicResource ComponentColor}">
                                    <ListView CachingStrategy="RecycleElement"
                                              HasUnevenRows="True"
                                              IsPullToRefreshEnabled="True"
                                              IsRefreshing="{Binding IsRefreshing, Mode=OneWay}"
                                              ItemTemplate="{StaticResource NewsComponentsDataTemplateSelector}"
                                              ItemsSource="{Binding Records}"
                                              SelectionMode="None"
                                              SeparatorVisibility="None">
                                    </ListView>
                                    <StackLayout HorizontalOptions="Center"
                                             IsVisible="{Binding HasError}"
                                             VerticalOptions="Center">
                                        <StackLayout>
                                            <Label FontAttributes="Bold"
                                               FontSize="13"
                                               HorizontalTextAlignment="Center"
                                               Text="Что-то пошло не так"
                                               TextColor="Gray" />
                                            <Label FontAttributes="Bold"
                                               FontSize="13"
                                               HorizontalTextAlignment="Center"
                                               Text="Нажмите, чтобы повторить попытку"
                                               TextColor="Gray" />
                                        </StackLayout>
                                    </StackLayout>
                                </Grid>
                            </ContentView>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </FlexLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>