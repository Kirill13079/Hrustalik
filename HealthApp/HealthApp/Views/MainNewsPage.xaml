<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:cards="clr-namespace:PanCardView;assembly=PanCardView" 
             xmlns:local="clr-namespace:HealthApp.Views.Components.PopularNewsComponents"
             x:Class="HealthApp.Views.MainNewsPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Shell.TitleView>
        <Grid BackgroundColor="{DynamicResource PageBackgroundColor}"
              ColumnDefinitions="*,10"
              HorizontalOptions="FillAndExpand"
              VerticalOptions="FillAndExpand">
            <Label FontAttributes="Bold"
                   FontSize="{StaticResource HeadLabelFontSize}"
                   HorizontalOptions="Center"
                   Text="Новости"
                   VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="PopularNewsView">
                <local:PopularNewsViewCell/>
            </DataTemplate>
            <local:PopularNewsComponentsDataTemplateSelector x:Key="NewsComponentsDataTemplateSelector"
                                                             PopularNewsView="{StaticResource PopularNewsView}"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView Padding="0,0">
            <Grid RowDefinitions="220, 202"
                  RowSpacing="10">
                <Frame BackgroundColor="{DynamicResource ComponentColor}"
                       Padding="0"
                       Margin="10,0"
                       CornerRadius="15"
                       HasShadow="False">
                </Frame>
                <ScrollView x:Name="carouselPopularNewsView"
                            Grid.Row="1"
                            BackgroundColor="{DynamicResource PageBackgroundColor}"
                            Orientation="Horizontal"
                            HorizontalScrollBarVisibility="Never">
                    <FlexLayout BindableLayout.ItemsSource="{Binding TabPopularRecords}"
                                Margin="10,0,0,0">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <ContentView>
                                    <Grid Padding="0,0,10,0"
                                          BackgroundColor="{DynamicResource PageBackgroundColor}"
                                          ColumnDefinitions="160">
                                        <ListView CachingStrategy="RecycleElement"
                                                  HasUnevenRows="True"
                                                  ItemTemplate="{StaticResource NewsComponentsDataTemplateSelector}"
                                                  ItemsSource="{Binding Records}"
                                                  SelectionMode="None"
                                                  SeparatorVisibility="None">
                                        </ListView>
                                        <StackLayout HorizontalOptions="Center"
                                                     IsVisible="{Binding HasError}"
                                                     VerticalOptions="Center">
                                            <StackLayout>
                                                <Label FontAttributes="Bold"
                                                       FontSize="13"
                                                       HorizontalTextAlignment="Center"
                                                       Text="Что-то пошло не так"
                                                       TextColor="Gray" />
                                                <Label FontAttributes="Bold"
                                                       FontSize="13"
                                                       HorizontalTextAlignment="Center"
                                                       Text="Нажмите, чтобы повторить попытку"
                                                       TextColor="Gray" />
                                            </StackLayout>
                                        </StackLayout>
                                    </Grid>
                                </ContentView>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                </ScrollView>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>