<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:popularNews="clr-namespace:HealthApp.Views.Components.PopularNewsComponents" 
             xmlns:feedNews="clr-namespace:HealthApp.Views.Components.FeedNewsComponents"
             xmlns:pnck="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             xmlns:convert="clr-namespace:HealthApp.Converts"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms" 
             x:Class="HealthApp.Views.MainNewsPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Shell.TitleView>
        <Grid BackgroundColor="{DynamicResource PageBackgroundColor}"
              ColumnDefinitions="*,10"
              HorizontalOptions="FillAndExpand"
              VerticalOptions="FillAndExpand">
            <Label FontAttributes="Bold"
                   FontSize="{StaticResource HeadLabelFontSize}"
                   HorizontalOptions="Center"
                   Text="Новости"
                   VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <ContentPage.Resources>
        <ResourceDictionary>
            <convert:DateConvert x:Key="DateConvert"/>
            <popularNews:PopularNewsComponentsDataTemplateSelector x:Key="PopularNewsDataTemplateSelector"/>
            <feedNews:FeedNewsComponentsDataTemplateSelector x:Key="FeedNewsComponentsDataTemplateSelector"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <Grid>
            <CollectionView x:Name="mainScrollView"
                            VerticalScrollBarVisibility="Never">
                <CollectionView.Header>
                    <Grid RowDefinitions="220,202"
                          RowSpacing="15"
                          Padding="0,0,0,5">
                        <pnck:PancakeView Grid.Row="0" 
                                          Padding="0"
                                          Margin="10,0"
                                          CornerRadius="15">
                            <ffimageloading:CachedImage Source="{Binding MainTabModel.HotRecord.Image}" 
                                                        Aspect="AspectFill"
                                                        BackgroundColor="{DynamicResource ImageBackgroundColor}"
                                                        DownsampleToViewSize="True"
                                                        DownsampleUseDipUnits="True"/>
                        </pnck:PancakeView>
                        <pnck:PancakeView Grid.Row="0" 
                                          Margin="10,0"
                                          CornerRadius="15"
                                          InputTransparent="True"
                                          BackgroundGradientEndPoint="0,1"
                                          Padding="10">
                            <pnck:PancakeView.BackgroundGradientStops>
                                <pnck:GradientStopCollection>
                                    <pnck:GradientStop Color="Transparent" Offset="0" />
                                    <pnck:GradientStop Color="Transparent" Offset="1" />
                                </pnck:GradientStopCollection>
                            </pnck:PancakeView.BackgroundGradientStops>
                            <StackLayout Orientation="Vertical" VerticalOptions="EndAndExpand">
                                <Label Text="{Binding MainTabModel.HotRecord.Category.Name}"
                                       FontFamily="Regular"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="1"
                                       TextColor="White"
                                       FontSize="{StaticResource SmallLabelFontSize}"/>
                                <Label Text="{Binding MainTabModel.HotRecord.Name}"  
                                       FontFamily="Bold"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="5"
                                       TextColor="White"
                                       FontSize="{StaticResource HeadLabelFontSize}"/>
                                <StackLayout Orientation="Horizontal">
                                    <StackLayout Orientation="Horizontal">
                                         <Frame Padding="0"
                                               CornerRadius="10">
                                            <ffimageloading:CachedImage Source="{Binding MainTabModel.HotRecord.Author.Logo}" 
                                                                        Aspect="AspectFill"
                                                                        DownsampleToViewSize="True"
                                                                        DownsampleUseDipUnits="True"
                                                                        HeightRequest="20"
                                                                        WidthRequest="20"/>
                                        </Frame>
                                        <Label Text="{Binding MainTabModel.HotRecord.Author.Name}"
                                               FontSize="{StaticResource SmallLabelFontSize}"
                                               TextColor="{DynamicResource AccentColor}"
                                               FontFamily="Medium"
                                               LineBreakMode="TailTruncation"
                                               MaxLines="1"
                                               VerticalOptions="Center">
                                        </Label>
                                    </StackLayout>
                                    <Label Text="{Binding MainTabModel.HotRecord.DateAdded, Converter={StaticResource DateConvert}}"
                                           FontFamily="Regular"
                                           LineBreakMode="TailTruncation"
                                           TextColor="{DynamicResource SkeletonColor}"
                                           MaxLines="1"
                                           VerticalOptions="Center"
                                           FontSize="{StaticResource SmallLabelFontSize}"
                                           HorizontalOptions="EndAndExpand">
                                    </Label>
                                </StackLayout>
                            </StackLayout>
                        </pnck:PancakeView>
                        <ScrollView x:Name="carouselPopularNewsView"
                                    Grid.Row="1"
                                    BackgroundColor="{DynamicResource PageBackgroundColor}"
                                    Orientation="Horizontal"
                                    HorizontalScrollBarVisibility="Never">
                            <FlexLayout BindableLayout.ItemsSource="{Binding MainTabModel.SubTabModel}"
                                        Margin="10,0,0,0">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <ContentView>
                                            <Grid Padding="0,0,10,0"
                                                  BackgroundColor="{DynamicResource PageBackgroundColor}"
                                                  ColumnDefinitions="160">
                                                <ListView CachingStrategy="RecycleElement"
                                                          HasUnevenRows="True"
                                                          ItemTemplate="{StaticResource PopularNewsDataTemplateSelector}"
                                                          ItemsSource="{Binding Records}"
                                                          SelectionMode="None"
                                                          SeparatorVisibility="None">
                                                </ListView>
                                                <Frame HorizontalOptions="Fill"
                                                       IsVisible="{Binding HasError}"
                                                       VerticalOptions="Fill"
                                                       BackgroundColor="{DynamicResource ComponentColor}"
                                                       CornerRadius="15"
                                                       HasShadow="False">
                                                </Frame>
                                            </Grid>
                                        </ContentView>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </FlexLayout>
                        </ScrollView>
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout BindableLayout.ItemsSource="{Binding Records}"
                                     BindableLayout.ItemTemplateSelector="{StaticResource FeedNewsComponentsDataTemplateSelector}"
                                     Spacing="0"
                                     Padding="10,0">
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>