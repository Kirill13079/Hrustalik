<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:cards="clr-namespace:PanCardView;assembly=PanCardView" 
             xmlns:local="clr-namespace:HealthApp.Views.Components.PopularNewsComponents" 
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms" 
             xmlns:local1="clr-namespace:HealthApp.Views.Components.NewsComponents" xmlns:controls="clr-namespace:HealthApp.Controls"
             x:Class="HealthApp.Views.MainNewsPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <Shell.TitleView>
        <Grid BackgroundColor="{DynamicResource PageBackgroundColor}"
              ColumnDefinitions="*,10"
              HorizontalOptions="FillAndExpand"
              VerticalOptions="FillAndExpand">
            <Label FontAttributes="Bold"
                   FontSize="{StaticResource HeadLabelFontSize}"
                   HorizontalOptions="Center"
                   Text="Новости"
                   VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <ContentPage.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="PopularNewsView">
                <local:PopularNewsViewCell/>
            </DataTemplate>
            <local:PopularNewsComponentsDataTemplateSelector x:Key="NewsComponentsDataTemplateSelector"
                                                             PopularNewsView="{StaticResource PopularNewsView}"/>
            <DataTemplate x:Key="NewsView">
                <local1:NewsViewCell/>
            </DataTemplate>
            <DataTemplate x:Key="WideNewsView">
                <local1:WideNewsViewCell/>
            </DataTemplate>
            <local1:NewsComponentsDataTemplateSelector x:Key="NewsDataTemplateSelector"
                                                               NewsView="{StaticResource NewsView}"
                                                               WideNewsView="{StaticResource WideNewsView}"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <ScrollView Padding="0,0"
                    VerticalScrollBarVisibility="Never">
            <CollectionView ItemsSource="{Binding MainTabModel.Records}">
                <CollectionView.Header>
                    <Grid RowDefinitions="220,202">
                        <Frame BackgroundColor="{DynamicResource ComponentColor}"
                       Padding="0"
                       Margin="10,0"
                       CornerRadius="15"
                       HasShadow="False">
                            <ffimageloading:CachedImage Source="{Binding MainTabModel.HotRecord.Image}" 
                                                Aspect="AspectFill"
                                                BackgroundColor="{DynamicResource ImageBackgroundColor}"
                                                DownsampleToViewSize="True"
                                                DownsampleUseDipUnits="True"/>
                        </Frame>

                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="{DynamicResource ComponentColor}"
           Padding="20,20,20,15"
           HeightRequest="320"
           Margin="0,5"
           CornerRadius="15"
           VerticalOptions="Start">
                            <Grid RowDefinitions="90,*,Auto">
                                <StackLayout Orientation="Vertical">
                                    <Label x:Name="description"
                       FontFamily="Bold"
                       LineBreakMode="TailTruncation"
                       MaxLines="3"
                       FontSize="{StaticResource HeadLabelFontSize}">
                                    </Label>
                                    <StackLayout Orientation="Horizontal"
                             VerticalOptions="EndAndExpand">
                                        <StackLayout Orientation="Horizontal"
                                 WidthRequest="150"
                                 HorizontalOptions="StartAndExpand">
                                            <Frame Padding="0"
                               CornerRadius="10">
                                                <ffimageloading:CachedImage x:Name="authorImage"
                                                        Aspect="AspectFill"
                                                        DownsampleToViewSize="True"
                                                        DownsampleUseDipUnits="True"
                                                        HeightRequest="20"
                                                        WidthRequest="20"/>
                                            </Frame>
                                            <Label x:Name="published" 
                               FontSize="{StaticResource SmallLabelFontSize}"
                               TextColor="{DynamicResource AccentColor}"
                               FontFamily="Medium"
                               LineBreakMode="TailTruncation"
                               MaxLines="1"
                               VerticalOptions="Center">
                                            </Label>
                                        </StackLayout>
                                        <Label x:Name="data"
                           FontFamily="Regular"
                           LineBreakMode="TailTruncation"
                           TextColor="{DynamicResource SkeletonColor}"
                           MaxLines="1"
                           VerticalOptions="Center"
                           FontSize="{StaticResource SmallLabelFontSize}">
                                        </Label>
                                    </StackLayout>
                                </StackLayout>
                                <Frame Grid.Row="1" 
                   BackgroundColor="{DynamicResource ImageBackgroundColor}"
                   CornerRadius="10"
                   Padding="0">
                                    <ffimageloading:CachedImage x:Name="image"
                                            Aspect="AspectFill"
                                            BackgroundColor="{DynamicResource ImageBackgroundColor}"
                                            DownsampleToViewSize="True"
                                            DownsampleUseDipUnits="True" />
                                </Frame>
                                <StackLayout Grid.Row="2"
                         Padding="0,5,0,0"
                         Orientation="Horizontal">
                                    <Frame Padding="5"
                       CornerRadius="10">
                                        <StackLayout Orientation="Horizontal">
                                            <controls:TintedCachedImage WidthRequest="25" 
                                                    HeightRequest="25"                                                       
                                                    SvgSource="HealthApp.Resources.Icons.send.svg"
                                                    TintColor="{DynamicResource AccentColor}"/>
                                            <Label FontFamily="Medium"
                               Text="Поделиться"
                               LineBreakMode="TailTruncation"
                               VerticalOptions="Center"
                               TextColor="{DynamicResource AccentColor}"
                               MaxLines="1"
                               FontSize="{StaticResource SmallLabelFontSize}">
                                            </Label>
                                        </StackLayout>
                                    </Frame>
                                    <Frame Padding="5"
                       HorizontalOptions="EndAndExpand"
                       CornerRadius="10">
                                        <StackLayout Orientation="Horizontal">
                                            <controls:TintedCachedImage WidthRequest="25" 
                                                    HeightRequest="25"                                                       
                                                    SvgSource="HealthApp.Resources.Icons.bookmark.svg"
                                                    TintColor="{DynamicResource AccentColor}"/>
                                            <Label FontFamily="Medium"
                               Text="Сохранить"
                               LineBreakMode="TailTruncation"
                               VerticalOptions="Center"
                               TextColor="{DynamicResource AccentColor}"
                               MaxLines="1"
                               FontSize="{StaticResource SmallLabelFontSize}">
                                            </Label>
                                        </StackLayout>
                                    </Frame>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

