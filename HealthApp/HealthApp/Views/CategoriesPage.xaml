    <ContentPage.Content>
        <StackLayout>
            <!-- navbar -->
            <pnck:PancakeView HeightRequest="40"
                              CornerRadius="0"
                              Padding="0"
                              BackgroundColor="{DynamicResource AccentColor}">
                <!-- navbar content -->
                <ScrollView x:Name="scrollView"
                            HorizontalScrollBarVisibility="Never"
                            Orientation="Horizontal">
                    <Grid x:Name="tabBar"
                          BackgroundColor="{DynamicResource AccentColor}"
                          RowDefinitions="40"
                          RowSpacing="0">
                        <!-- items tab bar -->
                        <FlexLayout x:Name="itemsTabBar"
                                    BindableLayout.ItemsSource="{Binding CategoriesTab}"
                                    JustifyContent="SpaceAround">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Label Padding="10,0"
                                           FontFamily="Bold"
                                           FontSize="{StaticResource HeadLabelFontSize}"
                                           HorizontalTextAlignment="Center"
                                           Text="{Binding Title}"
                                           TextColor="White"
                                           VerticalTextAlignment="Center"
                                           >
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnTabItemTapped" 
                                                                  CommandParameter="{Binding .}"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </FlexLayout>
                        <!-- active indicator -->
                        <BoxView x:Name="activeIndicator"
                                 BackgroundColor="White"
                                 HeightRequest="3"
                                 HorizontalOptions="Start"
                                 VerticalOptions="End"
                                 CornerRadius="15"
                                 WidthRequest="30"/>
                    </Grid>
                </ScrollView>
            </pnck:PancakeView>
        </StackLayout>
