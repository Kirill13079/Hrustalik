<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:ffimageloadingsvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms" 
             xmlns:ffimg="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:fftransf="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations" 
             xmlns:convert="clr-namespace:HealthApp.Converts"
             xmlns:xtoll="http://xamarin.com/schemas/2020/toolkit"
             xmlns:controls="clr-namespace:HealthApp.Controls"
             x:Class="HealthApp.Views.SettingsPage"
             BackgroundColor="{DynamicResource ShellBackgroundColor}">

    <Shell.TitleView>
        <Grid BackgroundColor="{DynamicResource ShellBackgroundColor}">
            <Label FontAttributes="Bold"
                   FontSize="18"
                   HorizontalOptions="Center"
                   Text="Настройки"
                   VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <ContentPage.Content>
        <ScrollView>
            <Grid RowSpacing="30"
                  RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                  VerticalOptions="Start">
                <StackLayout Grid.Row="0">
                    <StackLayout.Triggers>
                        <DataTrigger Binding="{Binding IsLoggedIn}"
                                     TargetType="StackLayout"
                                     Value="True">
                            <Setter Property="IsVisible" 
                                    Value="False" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsLoggedIn}"
                                     TargetType="StackLayout"
                                     Value="False">
                            <Setter Property="IsVisible" 
                                    Value="True" />
                        </DataTrigger>
                    </StackLayout.Triggers>
                    <Grid Padding="10"
                          BackgroundColor="{DynamicResource SettingsBackgroundColor}"
                          ColumnSpacing="15"
                          ColumnDefinitions="*,Auto"
                          xtoll:TouchEffect.NativeAnimation="True">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding LogInPageCommand}"/>
                        </Grid.GestureRecognizers>
                        <StackLayout Grid.Column="0" 
                                     VerticalOptions="Center">
                            <Label FontSize="16"
                                   LineBreakMode="WordWrap"
                                   Text="Вход позволит синхронизировать Ваши предпочтения и избранное на разных устройствах." />
                        </StackLayout>
                        <controls:TintedCachedImage Grid.Column="1" 
                                                    WidthRequest="25" 
                                                    HeightRequest="25"                                                       
                                                    SvgSource="HealthApp.Resources.Icons.rearrow.svg"
                                                    TintColor="{DynamicResource AccentColor}"/>
                    </Grid>
                </StackLayout>
                <StackLayout Grid.Row="0" 
                             Padding="15"
                             BackgroundColor="{DynamicResource SettingsBackgroundColor}"
                             Spacing="10"
                             IsVisible="{Binding IsLoggedIn}"
                             VerticalOptions="Start">
                    <Label HorizontalOptions="Start" 
                               Text="{Binding Customer.Email}"
                               FontFamily="Bold"
                               FontSize="18"/>
                </StackLayout>
                <StackLayout Grid.Row="1"
                             Spacing="5"
                             VerticalOptions="Start">
                    <Label Margin="10,0,0,0" 
                           Text="Настройки"
                           FontFamily="Bold"
                           FontSize="18"/>
                    <Grid Padding="10"
                          BackgroundColor="{DynamicResource SettingsBackgroundColor}"
                          ColumnSpacing="15"
                          ColumnDefinitions="Auto,*"
                          xtoll:TouchEffect.NativeAnimation="True">
                        <controls:TintedCachedImage Grid.Column="0" 
                                                    WidthRequest="25" 
                                                    HeightRequest="25"                                                       
                                                    SvgSource="HealthApp.Resources.Icons.notifications.svg"
                                                    TintColor="{DynamicResource TertiaryColor}"/>
                        <Label Grid.Column="1"
                               FontSize="16"
                               VerticalOptions="Center"
                               FontFamily="Regular"
                               Text="Уведомления"/>
                    </Grid>
                </StackLayout>
                <StackLayout Grid.Row="2"
                             Spacing="5">
                    <Label Margin="10,0,0,0" 
                           Text="Тема"
                           FontFamily="Bold"
                           FontSize="18"/>
                    <Grid Padding="0,0, 0,0"
                          BackgroundColor="{DynamicResource SettingsBackgroundColor}">
                        <ScrollView HorizontalScrollBarVisibility="Never"
                                    Orientation="Horizontal">
                            <FlexLayout x:Name="themeList"
                                        BindableLayout.ItemsSource="{Binding ThemeItems}">
                                <BindableLayout.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout Orientation="Horizontal"
                                                     Margin="10,0,0,0">
                                            <CheckBox IsChecked="{Binding IsActive}"
                                                      Color="{DynamicResource TertiaryColor}"
                                                      CheckedChanged="Theme_CheckedChanged">
                                            </CheckBox>
                                            <Label x:Name="themeTitle"
                                                   Padding="0,0,30,0"
                                                   FontFamily="Regular"
                                                   FontSize="16"
                                                   HeightRequest="50"
                                                   HorizontalTextAlignment="Start"
                                                   Text="{Binding Subtitle}"
                                                   TextColor="{DynamicResource SecondaryColor}"
                                                   VerticalTextAlignment="Center"/>
                                        </StackLayout>
                                    </DataTemplate>
                                </BindableLayout.ItemTemplate>
                            </FlexLayout>
                        </ScrollView>
                    </Grid>
                </StackLayout>
                <StackLayout Grid.Row="3"
                             Spacing="5">
                    <Label Margin="10,0,0,0" 
                           Text="Помощь"
                           FontFamily="Bold"
                           FontSize="18"/>
                    <Grid Padding="10"
                          BackgroundColor="{DynamicResource SettingsBackgroundColor}"
                          ColumnSpacing="15"
                          ColumnDefinitions="Auto,*"
                          xtoll:TouchEffect.NativeAnimation="True">
                        <controls:TintedCachedImage Grid.Column="0" 
                                                    WidthRequest="25" 
                                                    HeightRequest="25"                                                       
                                                    SvgSource="HealthApp.Resources.Icons.sms.svg"
                                                    TintColor="{DynamicResource TertiaryColor}"/>
                        <Label Grid.Column="1"
                               FontSize="16"
                               VerticalOptions="Center"
                               FontFamily="Regular"
                               Text="Задать вопрос"/>
                    </Grid>
                    <Grid Padding="10"
                          BackgroundColor="{DynamicResource SettingsBackgroundColor}"
                          ColumnSpacing="15"
                          ColumnDefinitions="Auto,*"
                          xtoll:TouchEffect.NativeAnimation="True">
                        <controls:TintedCachedImage Grid.Column="0" 
                                                    WidthRequest="25" 
                                                    HeightRequest="25"                                                       
                                                    SvgSource="HealthApp.Resources.Icons.verified.svg"
                                                    TintColor="{DynamicResource TertiaryColor}"/>
                        <Label Grid.Column="1"
                               FontSize="16"
                               VerticalOptions="Center"
                               FontFamily="Regular"
                               Text="Политика конфиденциальности"/>
                    </Grid>
                </StackLayout>
                <StackLayout Grid.Row="4"
                             Margin="0,0,0,5"
                             IsVisible="{Binding IsLoggedIn}">
                    <Grid Padding="10"
                          BackgroundColor="{DynamicResource SettingsBackgroundColor}"
                          ColumnSpacing="15"
                          xtoll:TouchEffect.NativeAnimation="True">
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding SignOutCommand}"/>
                        </Grid.GestureRecognizers>
                        <Label FontSize="16"
                               TextColor="Red"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"
                               FontFamily="Bold"
                               Text="Выйти"/>
                    </Grid>
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>